  <script>
    // Change language function
    function changeLanguage(language) {
      let content = document.getElementById('content');
      
      if (language === 'fr') {
        content.innerHTML = `
          <section>
            <h2>Règles Générales</h2>
            <ul>
              <li>Respecter tous les membres du serveur.</li>
              <li>Pas de spam ou flood dans les canaux.</li>
              <li>Éviter les sujets sensibles (politique, religion, etc.).</li>
            </ul>
          </section>
          <section>
            <h2>Comportement</h2>
            <ul>
              <li>Pas d'insultes ou de propos haineux.</li>
              <li>Rester poli, même en cas de désaccord.</li>
              <li>Utiliser les salons de façon appropriée.</li>
            </ul>
          </section>
          <section>
            <h2>Sécurité & Confidentialité</h2>
            <ul>
              <li>Ne partagez pas d'informations personnelles.</li>
              <li>Signalez tout comportement suspect aux modérateurs.</li>
              <li>Ne cliquez pas sur des liens suspects.</li>
            </ul>
          </section>
          <section class="contact">
            <h2>Rejoins notre serveur</h2>
            <a href="https://discord.gg/tonlien" target="_blank">Rejoindre le Discord</a>
          </section>
        `;
      } else if (language === 'en') {
        content.innerHTML = `
          <section>
            <h2>General Rules</h2>
            <ul>
              <li>Respect all server members.</li>
              <li>No spam or flooding in channels.</li>
              <li>Avoid sensitive topics like politics and religion.</li>
            </ul>
          </section>
          <section>
            <h2>Behavior</h2>
            <ul>
              <li>No hate speech or insults.</li>
              <li>Be polite even when disagreeing.</li>
              <li>Use channels appropriately.</li>
            </ul>
          </section>
          <section>
            <h2>Security & Privacy</h2>
            <ul>
              <li>Do not share personal information.</li>
              <li>Report any suspicious behavior to moderators.</li>
              <li>Do not click on suspicious links.</li>
            </ul>
          </section>
          <section class="contact">
            <h2>Join our server</h2>
            <a href="https://discord.gg/yourlink" target="_blank">Join the Discord</a>
          </section>
        `;
      } else if (language === 'ar') {
        content.innerHTML = `
          <section>
            <h2>القواعد العامة</h2>
            <ul>
              <li>احترام جميع أعضاء السيرفر.</li>
              <li>عدم إرسال الرسائل المكررة أو الغمر.</li>
              <li>تجنب المواضيع الحساسة مثل السياسة والدين.</li>
            </ul>
          </section>
          <section>
            <h2>السلوك</h2>
            <ul>
              <li>لا يُسمح بالكلام البغيض أو الشتائم.</li>
              <li>كن مؤدبًا حتى في حالة الخلاف.</li>
              <li>استخدم القنوات بشكل مناسب.</li>
            </ul>
          </section>
          <section>
            <h2>الأمان والخصوصية</h2>
            <ul>
              <li>لا تشارك معلوماتك الشخصية.</li>
              <li>أبلغ عن أي سلوك مشبوه إلى المشرفين.</li>
              <li>لا تضغط على الروابط المشبوهة.</li>
            </ul>
          </section>
          <section class="contact">
            <h2>انضم إلى سيرفرنا</h2>
            <a href="https://discord.gg/9zYARRBefZ" target="_blank">انضم إلى ديسكورد</a>
          </section>
        `;
      }
    }

    // Set default language to French
    changeLanguage('fr');
  </script>
